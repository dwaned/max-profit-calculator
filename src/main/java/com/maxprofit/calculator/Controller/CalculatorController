import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class CalculatorController {

  @PostMapping("/calculate")
  public int calculate(@RequestBody int savingsAmount,
  @RequestBody List<Integer> currentPrices,
  @RequestBody List<Integer> futurePrices) {
    int result = Stock.returnIndicesMaxProfit(savingsAmount,Arrays.asList(currentPrices),Arrays.asList(futurePrices));
    return result;
  }
}
